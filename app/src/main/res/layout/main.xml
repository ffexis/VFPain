<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_pinres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:gravity="start"
        android:text="@string/vfh_init"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="24sp"
        tools:fontFamily="sans-serif-condensed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ox0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_ox9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="48sp"
        android:text="@string/result_init"
        tools:fontFamily="sans-serif-condensed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <Button
                        android:id="@+id/btn_p1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textSize="32sp" />



                    <Button
                        android:id="@+id/btm_p3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="32sp" />
                    <Button
                        android:id="@+id/btn_p5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:textSize="32sp" />
                    <Button
                        android:id="@+id/btn_p7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="7"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn_o"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:text="○"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_p2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn_p4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:textSize="32sp" />


                    <Button
                        android:id="@+id/btn_p6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:textSize="32sp" />


                    <Button
                        android:id="@+id/btn_p8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="8"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn_x"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:text="×"
                        android:textSize="32sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_backsp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:gravity="center"
                android:text="c"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_mad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_light"
                android:text="M+"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_mrm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_light"
                android:text="M-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_eq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="="
                android:textSize="32sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>